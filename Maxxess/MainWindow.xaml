<Window x:Class="Maxxess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Maxxess - Factures" Height="586" Width="911"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
   
    <Grid Background="#FF00C5FF" Margin="0,0,0,-2">
        <ListView x:Name="listViewFactures" ItemsSource="{Binding FacturesCollection}" HorizontalAlignment="Left" Height="459" Margin="0,60,0,0" VerticalAlignment="Top" Width="889" MouseDoubleClick="ListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    
                    <GridViewColumn Width="160" Header="Nom" 
                                    DisplayMemberBinding="{Binding Client.Nom}"/>
                    <GridViewColumn Width="200" Header="Adresse" 
                                    DisplayMemberBinding="{Binding Client.Adresse1}"/>
                    <GridViewColumn Width="70" Header="N° client" 
                                    DisplayMemberBinding="{Binding Client.ID}"/>
                    <GridViewColumn Width="100" Header="Date" 
                                    DisplayMemberBinding="{Binding DateShort}"/>
                    <GridViewColumn Width="80" Header="Montant"
                                    DisplayMemberBinding="{Binding TotalEuros}"/>
                    <GridViewColumn Width="70" Header="Mode"
                                    DisplayMemberBinding="{Binding ModeReglement}"/>
                    <GridViewColumn Width="100" Header="Chèque cadeau"
                                    DisplayMemberBinding="{Binding ChequeCadeauEuros}"/>
                    <GridViewColumn Width="50" Header="Généré"
                                    DisplayMemberBinding="{Binding isChequeAssocieGenere}"/>
                    <GridViewColumn Width="50" Header="Bloqué"
                                    DisplayMemberBinding="{Binding isChequeAssocieBloque}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Bt_Nom" Content="Nom" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,4,0,0" Click="Bt_Nom_Click">

        </Button>
        <TextBox x:Name="txt_search" HorizontalAlignment="Left" Height="23" Margin="10,29,0,0" TextWrapping="Wrap" Text="Rechercher un client" VerticalAlignment="Top" Width="134" GotFocus="txt_search_GotFocus" KeyDown="txt_search_KeyDown"/>
        <Button x:Name="Bt_numClient" Content="N° Client" HorizontalAlignment="Left" Margin="90,4,0,0" VerticalAlignment="Top" Width="75" Click="Bt_numClient_Click" RenderTransformOrigin="0.52,-0.1">

        </Button>
        <Button x:Name="bt_FactureJour" Content="Factures du jours" HorizontalAlignment="Left" Margin="719,5,0,0" VerticalAlignment="Top" Width="106" Click="bt_FactureJour_Click" />
        <Button x:Name="bt_AllFactures" Content="Toutes les factures" HorizontalAlignment="Left" Margin="609,5,0,0" VerticalAlignment="Top" Width="104" Click="bt_AllFactures_Click"/>
        <Label x:Name="lb_TotalJour" Content="" HorizontalAlignment="Left" Margin="10,524,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.447,-0.654" Width="146"/>
        <Button x:Name="bt_Cheque" Content="Chèque" HorizontalAlignment="Left" Margin="250,524,0,0" VerticalAlignment="Top" Width="75" Click="bt_Cheque_Click"  IsEnabled="False"/>
        <Button x:Name="bt_CB" Content="CB" HorizontalAlignment="Left" Margin="351,524,0,0" VerticalAlignment="Top" Width="75" Click="bt_CB_Click"  IsEnabled="False"/>
        <Button x:Name="bt_Clients" Content="Clients" HorizontalAlignment="Left" Margin="311,5,0,0" VerticalAlignment="Top" Width="75" Click="bt_Clients_Click"  Background="#FFDDF025"/>

        <Image x:Name="img_refresh" HorizontalAlignment="Left" Height="23" Margin="814,32,0,0" VerticalAlignment="Top" Width="29" MouseLeftButtonDown="Image_MouseLeftButtonDown" MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" Source="{StaticResource refresh}"/>

    </Grid>
</Window>
