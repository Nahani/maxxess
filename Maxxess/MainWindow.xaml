<Window x:Class="Maxxess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="550" Width="725">
    <Grid>
        <ListView ItemsSource="{Binding FacturesCollection}" HorizontalAlignment="Left" Height="509" Margin="0,10,0,0" VerticalAlignment="Top" Width="707">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="140" Header="Nom" 
                                    DisplayMemberBinding="{Binding Client.Nom}"/>
                    <GridViewColumn Width="140" Header="Adresse" 
                                    DisplayMemberBinding="{Binding Client.Adresse1}"/>
                    <GridViewColumn Width="140" Header="Numéro Client" 
                                    DisplayMemberBinding="{Binding Client.ID}"/>
                    <GridViewColumn Width="140" Header="Montant Total"
                                    DisplayMemberBinding="{Binding Total}"/>
                    <GridViewColumn Width="140" Header="Chèque Cadeau"
                                    DisplayMemberBinding="{Binding ChequeCadeau}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
